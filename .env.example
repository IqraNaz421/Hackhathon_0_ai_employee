# Personal AI Employee - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# Gold Tier - Autonomous Processing Configuration
# ============================================================================

# Enable/disable autonomous processing (Gold Tier)
AI_PROCESSOR_ENABLED=true

# Processing interval in seconds (default: 30)
PROCESSING_INTERVAL=30

# Auto-process action items by domain (true/false)
AUTO_PROCESS_PERSONAL=true
AUTO_PROCESS_BUSINESS=true

# ============================================================================
# Xero Accounting Integration (Gold Tier)
# ============================================================================

# Xero OAuth 2.0 credentials
# Get from: https://developer.xero.com/app/manage
XERO_CLIENT_ID=your_xero_client_id_here
XERO_CLIENT_SECRET=your_xero_client_secret_here

# Xero OAuth redirect URI (must match app settings)
XERO_REDIRECT_URI=http://localhost:8080/callback

# Xero API scopes (space-separated)
XERO_SCOPES=accounting.transactions accounting.contacts accounting.settings offline_access

# Xero organization/tenant ID (obtained after OAuth flow)
XERO_TENANT_ID=

# ============================================================================
# Facebook Integration (Gold Tier)
# ============================================================================

# Facebook App credentials
# Get from: https://developers.facebook.com/apps/
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Facebook Page Access Token (long-lived)
# Generate via Graph API Explorer with manage_pages, publish_pages permissions
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token_here

# Facebook Page ID
FACEBOOK_PAGE_ID=your_facebook_page_id_here

# ============================================================================
# Instagram Integration (Gold Tier)
# ============================================================================

# Instagram Business Account ID (linked to Facebook Page)
# Get from: https://developers.facebook.com/docs/instagram-api
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id_here

# Instagram uses Facebook Page Access Token (no separate token needed)

# ============================================================================
# Twitter/X Integration (Gold Tier)
# ============================================================================

# Twitter OAuth 2.0 credentials (PKCE flow - no client secret in code)
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=your_twitter_client_id_here

# Twitter OAuth 2.0 redirect URI (must match app settings)
TWITTER_REDIRECT_URI=http://localhost:8080/twitter/callback

# Twitter API scopes (space-separated)
TWITTER_SCOPES=tweet.read tweet.write users.read offline.access

# Twitter Bearer Token (OAuth 2.0)
TWITTER_BEARER_TOKEN=

# Twitter Refresh Token (OAuth 2.0 - rotates every 6 months)
TWITTER_REFRESH_TOKEN=

# ============================================================================
# Claude API Integration (Gold Tier - for CEO Briefing insights)
# ============================================================================

# Anthropic Claude API key
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Claude model to use (sonnet, opus, haiku)
CLAUDE_MODEL=claude-sonnet-4-20250514

# ============================================================================
# Silver Tier - MCP Server Credentials
# ============================================================================

# Gmail OAuth 2.0 credentials
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:8080/gmail/callback

# WhatsApp credentials (via Twilio or WhatsApp Business API)
WHATSAPP_ACCOUNT_SID=your_whatsapp_account_sid_here
WHATSAPP_AUTH_TOKEN=your_whatsapp_auth_token_here
WHATSAPP_PHONE_NUMBER=+1234567890

# LinkedIn OAuth 2.0 credentials
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:8080/linkedin/callback

# Browser automation (optional credentials for authenticated sites)
BROWSER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ============================================================================
# Bronze Tier - Base Configuration
# ============================================================================

# Obsidian vault path (absolute path to AI_Employee folder)
VAULT_PATH=./AI_Employee

# Watcher intervals (in seconds)
GMAIL_WATCHER_INTERVAL=300
WHATSAPP_WATCHER_INTERVAL=300
LINKEDIN_WATCHER_INTERVAL=86400

# Dashboard update interval (in seconds)
DASHBOARD_UPDATE_INTERVAL=60

# ============================================================================
# Weekly Audit and CEO Briefing Configuration (Gold Tier)
# ============================================================================

# Weekly audit schedule (cron format: minute hour day-of-week)
# Default: Monday 9:00 AM
WEEKLY_AUDIT_SCHEDULE=0 9 * * 1

# CEO briefing schedule (cron format: minute hour day-of-week)
# Default: Monday 10:00 AM
CEO_BRIEFING_SCHEDULE=0 10 * * 1

# ============================================================================
# MCP Server Health Monitoring (Gold Tier)
# ============================================================================

# Health check interval (in seconds, default: 300 = 5 minutes)
HEALTH_CHECK_INTERVAL=300

# Health check timeout (in seconds, default: 10)
HEALTH_CHECK_TIMEOUT=10

# ============================================================================
# Retry and Error Handling Configuration (Gold Tier)
# ============================================================================

# Exponential backoff retry delays (comma-separated, in seconds)
RETRY_DELAYS=1,2,4

# Maximum retry attempts
MAX_RETRY_ATTEMPTS=3

# Request cache expiry (in seconds, default: 3600 = 1 hour)
REQUEST_CACHE_EXPIRY=3600

# ============================================================================
# Logging Configuration (All Tiers)
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable audit logging (true/false)
AUDIT_LOGGING_ENABLED=true

# Audit log rotation (days)
AUDIT_LOG_RETENTION_DAYS=365

# ============================================================================
# Development / Testing Configuration
# ============================================================================

# Environment mode (development, staging, production)
ENVIRONMENT=production

# Enable debug mode (true/false)
DEBUG_MODE=false

# Dry run mode - log actions without executing (true/false)
DRY_RUN=false

# ============================================================================
# Security Configuration
# ============================================================================

# OS credential manager backend (auto, win32, macos, linux)
CREDENTIAL_BACKEND=auto

# Encrypt sensitive logs (true/false)
ENCRYPT_LOGS=false

# ============================================================================
# Notes
# ============================================================================

# - Never commit .env file to version control (use .gitignore)
# - Use OS credential manager for OAuth tokens when possible
# - Tokens in .env are for development/testing only
# - Production should use environment variables or secrets management
# - Review security best practices before deploying
